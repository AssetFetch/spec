{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Datablock: role.loose_material_map",
	"$id": "af.datablock.role.loose_material",
	"description": "Indicates that this component is part of a loose material as a material map.",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"material_name": {
			"type": "string"
		},
		"map": {
			"type": "string",
			"enum": [
				"albedo",
				"roughness",
				"metallic",
				"diffuse",
				"glossiness",
				"specular",
				"height",
				"normal+y",
				"normal-y",
				"opacity",
				"ambient_occlusion",
				"emission"
			]
		}
	},
	"required": [
		"material_name",
		"map"
	]
}